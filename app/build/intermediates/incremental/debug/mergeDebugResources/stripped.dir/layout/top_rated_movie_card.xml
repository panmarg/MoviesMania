<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clTopRatedMovie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTopRatedMovieCard"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="9dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="@+id/clTopRatedMovie"
        app:layout_constraintTop_toTopOf="@+id/clTopRatedMovie">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTopRatedMovieCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/basicYellow"
            android:padding="2dp"
            app:layout_constraintStart_toStartOf="@+id/cvTopRatedMovieCard"
            app:layout_constraintTop_toTopOf="@+id/cvTopRatedMovieCard">

            <ImageView
                android:id="@+id/ivTopRatedMovieImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/gradient"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="@+id/clTopRatedMovieCard"
                app:layout_constraintTop_toTopOf="@+id/clTopRatedMovieCard" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clTopRatedMovieDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivTopRatedMovieImage"
                app:layout_constraintStart_toStartOf="@+id/ivTopRatedMovieImage">


                <TextView
                    android:id="@+id/tvTopRatedMovieTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/clTopRatedMovieDetails"
                    app:layout_constraintTop_toTopOf="@+id/clTopRatedMovieDetails" />

                <TextView
                    android:id="@+id/tvTopRatedMovieLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/tvTopRatedMovieTitle"
                    app:layout_constraintTop_toBottomOf="@+id/tvTopRatedMovieTitle" />


                <TextView
                    android:id="@+id/tvTopRatedMovieReleaseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/tvTopRatedMovieLanguage"
                    app:layout_constraintTop_toBottomOf="@+id/tvTopRatedMovieLanguage" />


                <TextView
                    android:id="@+id/tvTopRatedMovieRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rating_bg"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/clTopRatedMovieDetails"
                    app:layout_constraintEnd_toEndOf="@+id/clTopRatedMovieDetails" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>